.speaker
  .avatar
    .speaker__name{ class: speaker.long_name? && 'long' || '' }
      %div
        = speaker.first_name
        %br
        = speaker.last_name
    %img{ src: speaker.avatar_filename(format: 'jpg') }
  .details
    - if speaker.pitch
      %h4= speaker.title
      .quote{ class: "highlight"}= speaker.pitch
      - if speaker.has_video?
        .video
          %a{ href: speaker.video, target: '_blank' } ğŸ¥ Watch Video
    .bio= speaker.bio
    .social
      - if speaker.has_twitter?
        %a{ href: "https://twitter.com/#{speaker.twitter}", target: '_blank' }= "@#{speaker.twitter}"
